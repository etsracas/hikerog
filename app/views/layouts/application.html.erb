<!DOCTYPE html>
<html>
  <head>
    <title>Hikerog</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= render 'shared/header' %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
